{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project-category.project-category",
      "inversedBy": "projects"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "dateCompleted": {
      "type": "date"
    },
    "location": {
      "type": "string"
    },
    "duration": {
      "type": "string"
    },
    "teamSize": {
      "type": "string"
    },
    "body": {
      "type": "richtext"
    },
    "results": {
      "type": "component",
      "repeatable": true,
      "component": "shared.list-item"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    }
  }
}
